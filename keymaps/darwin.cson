'.platform-darwin':
  'cmd-k cmd-b': 'unset!'
  'cmd-t':'tree-view:toggle'
  'ctrl-shift-t':'tree-view:reveal-active-file'
  'ctrl-t': 'fuzzy-finder:toggle-file-finder'
  'alt-shift-t':'platformio-ide-terminal:toggle'
  'alt-shift-x':'platformio-ide-terminal:close'

# ===== TREE-VIEW ==================================================================
'.platform-darwin .tree-view':
  'cmd-k up': 'unset!'
  'cmd-k right': 'unset!'
  'cmd-k left': 'unset!'
  'cmd-k down': 'unset!'
  'cmd-k l': 'unset!'
  'cmd-k k': 'unset!'
  'cmd-k j': 'unset!'
  'cmd-k h': 'unset!'

# ===== EDITOR =====================================================================
'.platform-darwin .editor':
    'cmd-k': 'custom:kill-line'

    'ctrl-backspace': 'editor:delete-to-beginning-of-subword'
    'cmd-backspace': 'editor:delete-to-end-of-subword'

    'cmd-right': 'editor:move-to-next-subword-boundary'
    'cmd-left': 'editor:move-to-previous-subword-boundary'
    'cmd-shift-right': 'editor:select-to-next-subword-boundary'
    'cmd-shift-left': 'editor:select-to-previous-subword-boundary'

# ===== MAIN EDITOR ================================================================
'.platform-darwin .editor:not([mini])':
    'cmd-g':'go-to-line:toggle'
    'cmd-a': 'editor:move-to-first-character-of-line'
    'cmd-e': 'editor:move-to-end-of-line'

