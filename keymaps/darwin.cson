# ===== WORKSPACE ==================================================================
'.platform-darwin .workspace':
    'ctrl-8': 'unset!' #github:toggle-github-tab-focus'
    'ctrl-9': 'unset!' #github:toggle-git-tab-focus'

    # ==== CURSOR ====
    'cmd->': 'core:move-to-bottom'
    'cmd-<': 'core:move-to-top'
    'cmd-shift-e': 'editor:select-to-end-of-line'
    'cmd-shift-a': 'editor:select-to-beginning-of-line'
    'cmd-h': 'core:select-all'

    # ==== TEXT MANIPULATION ====
    # 'ctrl-_': 'core:undo'
    # 'ctrl-w': 'core:cut'
    # 'cmd-w': 'core:copy'
    # 'cmd-y': 'core:paste'

    # ==== BUFFER ====
    'ctrl-g': 'core:cancel'
    'ctrl-`': 'core:close'

